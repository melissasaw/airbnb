
  <!-- Title -->
  <div class="form-group">
    <label for="title">Title</label>
    <input type= 'text' class="form-control" placeholder="Enter Title" name = "listing[title]">
    <small id="emailHelp" class="form-text text-muted">A short & attractive title increases your chances of getting a booking.</small>
  </div>

<!-- Description -->
  <div class="form-group">
    <label for="description" >Description</label>
    <input type= 'text' class="form-control"  placeholder="Enter Description" name="listing[description]">
    <small id="emailHelp" class="form-text text-muted">Let others know more about your property.</small>
  </div>

<!-- Property Type -->
  <div class="form-group">
    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">
    Property Type
    </label>
    <%property_type_arr = ["House","Apartment","Bed & Breakfast","Boutique Hotel","Cabin","Chalet","Cottage","Guesthouse","Hostel","Hotel","Loft","Resort","Townhouse","Villa"]%>
    <select name ="listing[property_type]" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
      <option selected>Select Property Type</option>
      <%property_type_arr.each do |type|%>
        <option value=<%=type%>><%=type%></option>
      <%end%>
    </select>
  </div>

<!-- Listing Type -->
  <div class ="form-group top-margin">
    <label for="place_type">Listing Type</label>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="listing[place_type]" value="1" >
      <label class="form-check-label" for="place_type">
        Entire Place
      </label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="listing[place_type]" value="2" >
      <label class="form-check-label" for="place_type">
        Private Room
      </label>
    </div>

        <div class="form-check">
      <input class="form-check-input" type="radio" name="listing[place_type]" value="3" >
      <label class="form-check-label" for="place_type">
        Shared Room
      </label>
    </div>
  </div>

