<!-- State and City -->
  <div class="row">
    <div class="col">
      <label for="state">State</label>
      <input type="text" class="form-control" placeholder="Enter State" name="listing[state]">
    </div>
    <div class="col">
      <label for="city">City</label>
    <input type="text" class="form-control" placeholder="Enter City" name="listing[city]">
    </div>
  </div>

<!-- Occupants -->
  <div class="form-group top-margin">
    <label for="occupants">Occupants</label>
    <input type="number" class="form-control" placeholder="Enter max number of occupants" name="listing[occupant]">
  </div>

<!-- Number beds, rooms and toilets -->
  <div class="row">
    <div class="col">
      <label for="bed_num">Number of Bed(s)</label>
      <input type="number" class="form-control" placeholder="Enter number of beds" name="listing[bed_number]">
    </div>
    <div class="col">
      <label for="rooms">Number of Rooms</label>
      <input type="number" class="form-control" placeholder="Enter number of rooms" name="listing[rooms]">
    </div>
    <div class="col">
      <label for="toilets">Number of Toilets</label>
