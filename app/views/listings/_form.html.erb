    </div>
  </div>

<!-- pets -->
  <div class ="form-group top-margin">
    <label for="pet">Pet Friendly</label>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="listing[pet]" value="1" >
      <label class="form-check-label" for="pet">
        Yes
      </label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="listing[pet]" value ="0">
